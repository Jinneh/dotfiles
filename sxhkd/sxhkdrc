
# - Reload sxhkd -
super + Escape ; s
	pkill --signal SIGUSR1 sxhkd

super + Escape ; p
	polybar-msg cmd restart

@super + ctrl + v
	xdotool type --delay 0 --clearmodifiers "$(xclip -o)"


# -- application launching --

# - terminal
super + Return
	$TERMINAL

# - application launcher
@super + l
	rofi -show drun

# - pass
@super + x
	PINENTRY_USER_DATA=gtk passmenu-rofi | xargs -I '@' notify-send 'copied' '@'

super + shift + l
	xautolock -locknow

super + ctrl + l
	xautolock -toggle

# - screenshots
@{_,shift} + Print
	scrot {_,-s} -e 'mv $f ~/Pictures/Screenshots'



# -- media keys --

# - navigate playlist
XF86Audio{Play,Stop,Next,Prev}
	mpc -q {toggle,stop,next,prev}

# - volume (basic)
XF86AudioMute
	amixer -qD pulse set Master toggle

{_,control} + XF86Audio{Raise,Lower}Volume
	amixer -qD pulse set Master {3,7}%{+,-}


