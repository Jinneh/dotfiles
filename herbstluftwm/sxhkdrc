# -- Herbstluftwm --

# - quit herbstluftwm
super + {control,shift} + q
	herbstclient {reload,quit}

# - focus clients
super + {s,n,r,t}
	herbstclient focus {left,down,up,right}

# - move clients
super + shift + {s,n,r,t}
	herbstclient shift {left,down,up,right}

# - resize frames
super + control + {s,n,r,t}
	herbstclient resize {left,down,up,right} +0.05

# - split frames
super + mod5 + {s,n,r,t}
	herbstclient split {left,bottom,top,right} 0.5

# - each client in frame gets subframe
super + control + space
	herbstclient split explod

# - {focus, move client to} next monitor
super + {_,shift} + g
	herbstclient {cycle_monitor,shift_to_monitor +1}

# - fullsceen
super + f
	herbstclient fullscreen

# - close client or remove frame
super + {_,shift} + adiaeresis
	herbstclient {close_or_remove,remove}

# - cycle through basic layouts
super + space
	herbstclient and .                        \
	  compare tags.focus.curframe_wcount gt 1 \
	. cycle_layout +1 horizontal vertical

# - cycle through basic layouts2
super + shift + space
	herbstclient and .                        \
	  compare tags.focus.curframe_wcount gt 1 \
	. cycle_layout +1 max grid

