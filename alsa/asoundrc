#}
#ctl.hdmi1 { type hw, card HDMI, device 3 }

# Mainboard
pcm.onboard {
	type hw
	card SB
}
ctl.onboard { type hw, card SB }

# Asus Essence STX II
pcm.essence {
	type hw
	card II
}
ctl.essence { type hw, card II }

# Blue Yeti
pcm.yeti {
	type   hw
	card   Microphone
}

pcm.dmixer {
	type      dmix
	ipc_key   1024 # unique!
	ipc_perm  0666
	slave {
		pcm "essence"
		period_time 0
		period_size 1024
		buffer_size 4096
		rate        44100
		channels    2
	}
	bindings {
		0 0
		1 1
	}
}

pcm.!default {
	type      plug
	slave.pcm "duplex"
}

pcm.duplex {
	type         asym
	playback.pcm "dmixer"
	capture.pcm  "dsnooper"
}

pcm.dsnooper {
	type            dsnoop
	ipc_key         2048 # unique!
	ipc_perm        0666
	ipc_key_add_uid yes
	slave {
		pcm         "yeti"
		period_time 0
		period_size 4096
		#rate        44100
		#format      S32_LE
		channels    2
	}
	bindings {
		0 0
		1 1
	}
}

ctl.!default {
	type hw
	card II
}

