# -- bspwm --

# -- hotkeys --

# quit bspwm
super + shift + Escape
	bspc quit

# reload config
super + Escape ; b
	$XDG_CONFIG_HOME/bspwm/bspwmrc

# close/kill node
super + {_,shift} + adiaeresis
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + f
	bspc desktop -l next


# -- state/flags --

# Toggle states
super + {ctrl,shift,mod5} + f
	bspc node -t \~{floating,fullscreen,tiled}


# -- focus/swap

# focus desktop when available on current desktop
# otherwise swap
super + {1-9,0}
	d='{1-9,10}'; \
	bspc query -T -m | jq -e --arg desk $d '.desktops[] | select(.name == $desk)' > /dev/null && \
	bspc desktop -f $d || bspc desktop -s $d

# send node to desktops
super + shift + {1-9,0}
	bspc node -d '{1-9,10}'

# focus node in given direction
super + {n,r,t,d}
	bspc node -f {west,south,north,east}

# swap node in given direction and follow across monitors
super + shift + {n,r,t,d}
	bspc node -s {west,south,north,east} --follow

# focus/swap with biggest node at current monitor
super + {_,shift} + space
	bspc node -{f,s} biggest.local

# focus prev/next node (to get acces to floating nodes)
super + {comma,period}
	bspc node -f {prev,next}.local

# Flip layout
super + {_,shift} + m
	bspc node @/ -F {vertical,horizontal}

# Rotate Layout
super + {_,shift} + b
	bspc node @/ -R {90,270}


# -- Resize --

# Increase window size
super + ctrl +  {n,r,t,d}
	bspc node -z {left -50 0,bottom 0 35,top 0 -35,right 35 0}

# Decrease window size
super + alt + {n,r,t,d}
	bspc node -z {left 50 0,bottom 0 -25,top 0 35,right -35 0}


# -- preselect --

# preselect the direction
super + mod5 + {n,r,t,d}
	bspc node -p \~{west,south,north,east}

# move to preselcted area
super + mod5 + space
	bspc node -n last.!automatic


# -- monitors --

# focus next monitor
super + {_,shift} + g
	bspc {monitor -f,node -m} next

# swap current desktop with focused desktop of next monitor
super + dead_circumflex
	bspc desktop -s next.focused



