; date and time in one module
; TODO Find a pretty way to put date and time in one module
[module/datetime]
type = internal/date

interval = 1

date = %a %d. %b
date-alt = %d.%m.%Y

time = %H:%M
time-alt = %H:%M:%S

format-background = ${vars.bright-background}
format-overline = ${vars.highlight-color}
format-padding = 0

; this is sooo ugly
label = "        %date%     %{B- -o} %{B#2b2b2b +o}     %time%     "
format = <label>



[module/time]
type = internal/date

interval = 1

time = %H:%M
time-alt = %H:%M:%S

format-background = ${vars.bright-background}
format-overline = ${vars.highlight-color}
format-padding = ${vars.module-padding}

label = %time%
format = <label>



