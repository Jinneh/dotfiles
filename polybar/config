[bar/bspwm-desktop-top]
monitor = ${env:MONITOR0}
monitor-fallback = ${env:MONITOR1}

locale = de_DE.UTF-8
fixed-center = false
bottom = false

width = 100%
height = 30
offset-x = 0
offset-y = 0

background = #000
foreground = ${vars.bright-foreground}

line-size = 1
line-color = ${vars.highlight-color}

separator = " "

font-0 = Noto Sans:pixelsize=9;0
font-1 = Noto Sans CJK JP:pixelsize=9;0
font-2 = 3270Medium Nerd Font:pixelsize=9;0
font-3 = Noto Mono:pixelsize=9;0

modules-left = powermenu bspwm
modules-center = xwindow
modules-right = mpd cpu memory volume keyboard date time

wm-restack = bspwm



